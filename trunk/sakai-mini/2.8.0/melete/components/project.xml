<project>
	<extend>../project.xml</extend>
    <pomVersion>3</pomVersion>
    <name>Etudes Melete Pack</name>
    <groupId>etudes</groupId>
    <id>etudes-melete-pack</id>
    <currentVersion>${melete.version}</currentVersion>
    <organization>
        <name>Etudes, Inc</name>
        <url>http://etudes.org/</url>
    </organization>
    <inceptionYear>2004</inceptionYear>
    <properties>
        <deploy.type>components</deploy.type>
    </properties>
    
    <dependencies>
        
        <dependency>
            <groupId>etudes</groupId>
            <artifactId>etudes-melete-impl</artifactId>
            <version>${melete.version}</version>
             <properties>
				<war.bundle>true</war.bundle>
			</properties>
        </dependency>
        <dependency>
            <groupId>etudes</groupId>
            <artifactId>etudes-melete-util</artifactId>
            <version>${melete.version}</version>
	    <properties>
	   	 <war.bundle>true</war.bundle>
	    </properties>
        </dependency>
        
      <dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-event-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		
		<dependency>
			<groupId>sakaiproject</groupId>
			<artifactId>sakai-entity-util</artifactId>
			<version>${sakai.version}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>	
		<dependency>
			<groupId>etudes</groupId>
			<artifactId>etudes-util</artifactId>
			<version>1.0</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties> 
		</dependency>
    </dependencies>

    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <resources>
            <resource>
                <directory>${basedir}/src/bundle</directory>
                <includes>
                    <include>**/*.properties</include>
                </includes>
            </resource>
            <resource>
                <directory>src/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
                <excludes>
                    <exclude>**/web.xml</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>
