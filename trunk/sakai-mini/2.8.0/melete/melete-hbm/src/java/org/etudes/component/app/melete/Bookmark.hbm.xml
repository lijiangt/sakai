<!DOCTYPE hibernate-mapping
    PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="org.etudes.component.app.melete.Bookmark" table="melete_bookmark">
  <id name="bookmarkId" column="BOOKMARK_ID" type="int" unsaved-value="null">
      <generator class="hilo"/>
    </id> 
       <property name="sectionId" column="SECTION_ID"  type="int"  not-null="true"/>
       <property name="userId" column="USER_ID" type="string" length="99">
       		<!--  column name="USER_ID" index="USER_ID_IDX" /-->
       </property>	
       <property name="siteId" column="SITE_ID" type="string" length="99">
       		<!--  column name="SITE_ID" index="SITE_ID_IDX" /-->
       </property>	
	    <many-to-one name="section" class="org.etudes.component.app.melete.Section" insert="false" update="false" column="SECTION_ID" lazy="false"/>
	    <property name="title" column="TITLE" type="string" not-null="true" length="255"/>
	    <property name="notes" column="NOTES"  type="text"  />						
       <property name="lastVisited" column="LAST_VISITED" type="boolean"/>
	 </class>
 </hibernate-mapping>
	 
	 
