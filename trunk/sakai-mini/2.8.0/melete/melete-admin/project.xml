	<inceptionYear>2004</inceptionYear>

   	<properties>
		<deploy.type>war</deploy.type>
	</properties>
	<dependencies>
		<dependency>
			<groupId>etudes</groupId>
			<artifactId>etudes-melete-api</artifactId>
			<version>${melete.version}</version>
		</dependency>
		
    	<dependency>
			<groupId>commons-logging</groupId>
